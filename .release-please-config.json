{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "plugins": [
    {
      "type": "linked-versions",
      "groupName": "arco-python-and-crates",
      "components": ["arco-crates", "arco-python"]
    }
  ],
  "packages": {
    "crates": {
      "release-type": "simple",
      "component": "arco-crates",
      "skip-github-release": true,
      "skip-changelog": true,
      "extra-files": [
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.package.version"
        }
      ]
    },
    "bindings/python": {
      "release-type": "python",
      "component": "arco-python",
      "package-name": "arco",
      "include-component-in-tag": false
    }
  }
}
